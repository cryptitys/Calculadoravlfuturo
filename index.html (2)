<body class="min-h-screen flex items-center justify-center p-4 py-8">
    <div class="calculator-card w-full max-w-4xl p-6 md:p-8">
        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-2">Calculadora de Desconto</h1>
            <p class="text-gray-600">Calcule o desconto de um título com base na fórmula DC = N . I . T</p>
        </div>

        <!-- Calculator Form -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Input Section -->
            <div class="space-y-6">
                <div class="space-y-4">
                    <!-- Valor do Título -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Valor do Título (R$)</label>
                        <div class="relative">
                            <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500">R$</span>
                            <input type="number" id="valorTitulo" class="currency-input input-field w-full pl-10 pr-4 py-4 text-lg" placeholder="0,00" min="0" step="0.01" value="1000">
                        </div>
                    </div>

                    <!-- Taxa de Desconto -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Taxa de Desconto (%)</label>
                        <div class="relative">
                            <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500">%</span>
                            <input type="number" id="taxaDesconto" class="currency-input input-field w-full pl-10 pr-4 py-4 text-lg" placeholder="0,00" min="0" max="100" step="0.01" value="10">
                        </div>
                    </div>

                    <!-- Tempo -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Tempo (períodos)</label>
                        <input type="number" id="tempo" class="input-field w-full px-4 py-4 text-lg" placeholder="0" min="1" value="1">
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex space-x-4 pt-4">
                    <button onclick="calcularDesconto()" class="flex-1 bg-red-600 hover:bg-red-700 text-white font-semibold py-4 px-8 rounded-xl transition-colors duration-200 flex items-center justify-center">
                        <span>Calcular Desconto</span>
                        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </button>
                    <button onclick="limparCampos()" class="px-6 py-4 border border-gray-300 text-gray-700 font-semibold rounded-xl hover:bg-gray-50 transition-colors duration-200">
                        Limpar
                    </button>
                </div>
            </div>

            <!-- Result Section -->
            <div class="result-display p-6 flex flex-col justify-center">
                <div class="text-center mb-6">
                    <h2 class="text-2xl font-bold mb-2">Resultado</h2>
                    <p class="opacity-90">Preencha os campos para calcular</p>
                </div>
                
                <div class="space-y-6">
                    <div class="text-center">
                        <p class="text-sm opacity-80 mb-2">Valor do Título</p>
                        <div id="resultadoTitulo" class="text-xl font-semibold">R$ 0,00</div>
                    </div>
                    
                    <div class="text-center">
                        <p class="text-sm opacity-80 mb-2">Desconto (R$)</p>
                        <div id="resultadoDesconto" class="text-3xl font-bold">R$ 0,00</div>
                    </div>
                    
                    <div class="text-center">
                        <p class="text-sm opacity-80 mb-2">Valor Final (R$)</p>
                        <div id="resultadoFinal" class="text-3xl font-bold">R$ 0,00</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function calcularDesconto() {
            const valorTitulo = parseFloat(document.getElementById('valorTitulo').value) || 0;
            const taxaDesconto = parseFloat(document.getElementById('taxaDesconto').value) / 100 || 0;
            const tempo = parseInt(document.getElementById('tempo').value) || 0;

            // Calcular desconto
            const desconto = valorTitulo * taxaDesconto * tempo;
            const valorFinal = valorTitulo - desconto;

            // Atualizar resultados
            document.getElementById('resultadoTitulo').textContent = `R$ ${valorTitulo.toLocaleString('pt-BR', {minimumFractionDigits: 2, maximumFractionDigits: 2})}`;
            document.getElementById('resultadoDesconto').textContent = `R$ ${desconto.toLocaleString('pt-BR', {minimumFractionDigits: 2, maximumFractionDigits: 2})}`;
            document.getElementById('resultadoFinal').textContent = `R$ ${valorFinal.toLocaleString('pt-BR', {minimumFractionDigits: 2, maximumFractionDigits: 2})}`;
        }

        function limparCampos() {
            document.getElementById('valorTitulo').value = '';
            document.getElementById('taxaDesconto').value = '';
            document.getElementById('tempo').value = '';
            
            document.getElementById('resultadoTitulo').textContent = 'R$ 0,00';
            document.getElementById('resultadoDesconto').textContent = 'R$ 0,00';
            document.getElementById('resultadoFinal').textContent = 'R$ 0,00';
        }

        // Calcular automaticamente quando os campos forem alterados
        document.addEventListener('DOMContentLoaded', function() {
            const inputs = document.querySelectorAll('input');
            inputs.forEach(input => {
                input.addEventListener('input', calcularDesconto);
            });
            
            // Calcular inicialmente com valores padrão
            calcularDesconto();
        });

        // Formatação automática dos campos monetários
        document.querySelectorAll('.currency-input').forEach(input => {
            input.addEventListener('blur', function(e) {
                const value = parseFloat(e.target.value);
                if (!isNaN(value)) {
                    e.target.value = value.toFixed(2);
                }
            });
        });
    </script>
</body>
</html>
