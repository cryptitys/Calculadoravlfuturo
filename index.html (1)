                <!-- Action Buttons -->
                <div class="flex space-x-4 pt-4">
                    <button onclick="calcularValorFuturo()" class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors duration-200">
                        Calcular
                    </button>
                    <button onclick="limparCampos()" class="px-6 py-3 border border-gray-300 text-gray-700 font-semibold rounded-lg hover:bg-gray-50 transition-colors duration-200">
                        Limpar
                    </button>
