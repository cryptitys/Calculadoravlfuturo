        <!-- Calculator Form -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Input Section -->
            <div class="space-y-6">
                <div class="space-y-4">
                    <!-- Valor Inicial -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Valor Inicial (R$)</label>
                        <div class="relative">
                            <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500">R$</span>
                            <input type="number" id="valorInicial" class="currency-input input-field w-full pl-10 pr-4 py-3 text-lg" placeholder="0,00" min="0" step="0.01" value="1000">
                        </div>
                    </div>

                    <!-- Taxa de Juros -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Taxa de Juros Anual (%)</label>
                        <div class="relative">
                            <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500">%</span>
                            <input type="number" id="taxaJuros" class="currency-input input-field w-full pl-10 pr-4 py-3 text-lg" placeholder="0,00" min="0" step="0.01" value="12">
                        </div>
                    </div>

                    <!-- Período -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Período (anos)</label>
                        <input type="number" id="periodo" class="input-field w-full px-4 py-3 text-lg" placeholder="0" min="1" max="50" value="5">
                    </div>

                    <!-- Aporte Mensal -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Aporte Mensal (R$)</label>
                        <div class="relative">
                            <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500">R$</span>
                            <input type="number" id="aporteMensal" class="currency-input input-field w-full pl-10 pr-4 py-3 text-lg" placeholder="0,00" min="0" step="0.01" value="100">
                        </div>
                    </div>
