        <!-- Informações Adicionais -->
        <div class="mt-8 p-6 bg-gray-50 rounded-lg">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">ℹ️ Como funciona o cálculo?</h3>
            <p class="text-sm text-gray-600 mb-3">
                A calculadora utiliza juros compostos com a fórmula: VF = P × (1 + i)^n + PMT × [(1 + i)^n - 1] / i
            </p>
            <p class="text-sm text-gray-600">
                Onde: VF = Valor Futuro, P = Valor Inicial, i = Taxa mensal, n = Períodos, PMT = Aporte Mensal
            </p>
        </div>
    </div>

    <script>
        function calcularValorFuturo() {
            // Obter valores dos inputs
            const valorInicial = parseFloat(document.getElementById('valorInicial').value) || 0;
            const taxaJurosAnual = parseFloat(document.getElementById('taxaJuros').value) || 0;
            const periodoAnos = parseInt(document.getElementById('periodo').value) || 0;
            const aporteMensal = parseFloat(document.getElementById('aporteMensal').value) || 0;

            // Converter taxa anual para mensal
            const taxaMensal = Math.pow(1 + taxaJurosAnual / 100, 1/12) - 1;
            const periodosMeses = periodoAnos * 12;

            // Calcular valor futuro
            let valorFuturo = 0;
            
            if (taxaMensal === 0) {
                // Caso sem juros
                valorFuturo = valorInicial + (aporteMensal * periodosMeses);
            } else {
                // Fórmula de juros compostos com aportes
                valorFuturo = valorInicial * Math.pow(1 + taxaMensal, periodosMeses) + 
                             aporteMensal * ((Math.pow(1 + taxaMensal, periodosMeses) - 1) / taxaMensal);
            }

            // Calcular totais
            const totalInvestido = valorInicial + (aporteMensal * periodosMeses);
            const rendimentos = valorFuturo - totalInvestido;

            // Atualizar resultados
            document.getElementById('resultadoValor').textContent = `R$ ${valorFuturo.toLocaleString('pt-BR', {minimumFractionDigits: 2, maximumFractionDigits: 2})}`;
            document.getElementById('totalInvestido').textContent = `R$ ${totalInvestido.toLocaleString('pt-BR', {minimumFractionDigits: 2, maximumFractionDigits: 2})}`;
            document.getElementById('rendimentos').textContent = `R$ ${rendimentos.toLocaleString('pt-BR', {minimumFractionDigits: 2, maximumFractionDigits: 2})}`;

            // Gerar projeção mensal simplificada
            let projecao = '';
            let saldoAtual = valorInicial;
            
            for (let mes = 1; mes <= Math.min(12, periodosMeses); mes++) {
                saldoAtual = saldoAtual * (1 + taxaMensal) + aporteMensal;
                projecao += `Mês ${mes}: R$ ${saldoAtual.toLocaleString('pt-BR', {minimumFractionDigits: 2, maximumFractionDigits: 2})}<br>`;
            }
            
            if (periodosMeses > 12) {
                projecao += `...<br>Mês final: R$ ${valorFuturo.toLocaleString('pt-BR', {minimumFractionDigits: 2, maximumFractionDigits: 2})}`;
            }
            
            document.getElementById('projecaoMensal').innerHTML = projecao;
        }

        function limparCampos() {
            document.getElementById('valorInicial').value = '';
            document.getElementById('taxaJuros').value = '';
            document.getElementById('periodo').value = '';
            document.getElementById('aporteMensal').value = '';
            
            document.getElementById('resultadoValor').textContent = 'R$ 0,00';
            document.getElementById('totalInvestido').textContent = 'R$ 0,00';
            document.getElementById('rendimentos').textContent = 'R$ 0,00';
            document.getElementById('projecaoMensal').textContent = 'Clique em calcular para ver a projeção';
        }

        // Calcular automaticamente quando os campos forem alterados
        document.addEventListener('DOMContentLoaded', function() {
            const inputs = document.querySelectorAll('input');
            inputs.forEach(input => {
                input.addEventListener('input', calcularValorFuturo);
            });
            
            // Calcular inicialmente com valores padrão
            calcularValorFuturo();
        });

        // Formatação automática dos campos monetários
        document.querySelectorAll('.currency-input').forEach(input => {
            input.addEventListener('blur', function(e) {
                const value = parseFloat(e.target.value);
                if (!isNaN(value)) {
                    e.target.value = value.toFixed(2);
                }
            });
        });
    </script>
</body>
